<body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
        <input  name="newlisting[title]" placeholder="Enter title" type="text">
        <br /><br />
        <textarea  name="newlisting[description]" placeholder="Enter description" type="text"></textarea>
        <br /><br />
        <input  name="newlisting[image]" placeholder="Enter image URL/Link" type="text">
        <br /><br />
        <input name="newlisting[price]" placeholder="Enter price" type="number" >
        <br /><br />
        <input  name="newlisting[location]" placeholder="Enter location" type="text">
        <br /><br />
        <input  name="newlisting[country]" placeholder="Enter country" type="text">
        <br /><br />
        <button>Add</button>
    </form>
</body>
</html>